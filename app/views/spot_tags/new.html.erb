<!-- Validation failure messages -->
<% if @spot_tag.errors.any? %>
  <% @spot_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Spot Tag</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_spot_tag" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for spot_id -->
      <div class="form-group">
        <label for="spot_id" class="control-label">
          Spot
        </label>

        <input type="text" id="spot_id" name="spot_id" placeholder="Spot" class="form-control" value="<%= @spot_tag.spot_id %>">
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <input type="text" id="tag_id" name="tag_id" placeholder="Tag" class="form-control" value="<%= @spot_tag.tag_id %>">
      </div>

      <button class="btn btn-success">
        Create Spot Tag
      </button>
      or
      <a href="/spot_tags">Cancel</a>
    </form>
  </div>
</div>
