<div class="page-header">
  <h1>
    Spot tags
    <a href="/spot_tags/new" class="btn btn-lg btn-success">New Spot tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Spot</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @spot_tags.each do |spot_tag| %>
      <tr>
        <td><%= spot_tag.spot_id %></td>
        <td><%= spot_tag.tag_id %></td>
        <td>
          <a href="/spot_tags/<%= spot_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/spot_tags/<%= spot_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_spot_tag/<%= spot_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
