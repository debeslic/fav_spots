<div class="page-header">
  <h1>
    Spots
    <a href="/spots/new" class="btn btn-lg btn-success">New Spot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Category</th>
        <!-- <th>Address</th> -->
        <th>Neighborhood</th>
        <th>City</th>
        <th></th>
      </tr>

      <% @spots.each do |spot| %>
      <tr>
        <td>
          <a href="/spots/<%= spot.id %>"><img src="<%= spot.photo %>" class="img-rounded" width="200" height="160"></a>
        </td>
        <td><a href="/spots/<%= spot.id %>"><%= spot.name %></a></td>
        <td><%= spot.category %></td>
        <!-- <td><%= spot.address %></td> -->
        <td><%= spot.neighborhood %></td>
        <td><%= spot.city %></td>
        <td>
          <a href="/spots/<%= spot.id %>" class="btn btn-primary">Details</a>
          <a href="/spots/<%= spot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_spot/<%= spot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
