<div class="page-header">
  <h1>
    My FavSpots <i class="glyphicon glyphicon-heart-empty"></i>
  </h1>
  <p>The ultimate list of all the spots you've liked across groups</p>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Spot</th>
        <th>Name</th>
        <th>Type</th>
        <th>Location</th>
        <th>Group</th>
      </tr>

      <% @group_enrollments.each do |group_enrollment| %>
      <% group_enrollment.reviews.each do |review| %>

      <tr>
        <td><img src="<%= review.spot.photo %>" class="img-rounded" width="200" height="160"></td>
        <td>
          <a href ="/spots/<%= review.spot.id %>"> <%= review.spot.name %> </a>
        </td>
        <td><%= review.spot.category %></td>
        <td><%= review.spot.neighborhood %>, <%= review.spot.city %></td>
        <td>
          <a href="/groups/<%= group_enrollment.group.id %>"><%= group_enrollment.group.name %></a>
        </td>
      </tr>
      <% end %>
      <% end %>

      <% @likes.each do |like| %>
      <tr>
        <td><img src="<%= like.review.spot.photo %>" class="img-rounded" width="200" height="160"></td>
        <td>
          <a href ="/spots/<%= like.review.spot.id %>"><%= like.review.spot.name %></a>
          </td>
        <td><%= like.review.spot.category %></td>
        <td><%= like.review.spot.neighborhood %>, <%= like.review.spot.city %></td>
        <td>
          <a href="/groups/<%= like.review.group_enrollment.group.id %>"><%= like.review.group_enrollment.group.name %></a>
        </td>
      </tr>


      <% end %>

    </table>
  </div>
</div>
