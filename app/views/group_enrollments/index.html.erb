<div class="page-header">
  <h1>
    Group enrollments
    <a href="/group_enrollments/new" class="btn btn-lg btn-success">New Group enrollment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Group</th>
        <th>Actions</th>
      </tr>

      <% @group_enrollments.each do |group_enrollment| %>
      <tr>
        <td><%= group_enrollment.user.first_name %> <%= group_enrollment.user.last_name %></td>
        <td><%= group_enrollment.group.name %></td>
        <td>
          <a href="/group_enrollments/<%= group_enrollment.id %>" class="btn btn-primary">Show</a>
          <a href="/group_enrollments/<%= group_enrollment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_group_enrollment/<%= group_enrollment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
